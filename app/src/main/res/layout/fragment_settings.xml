<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSettingsTitle"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:text="Settings"
                android:textColor="?attr/colorSecondary"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tvCategoryAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/settings_category_appearance"
                android:textColor="?attr/colorSecondary"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/horizontal_divider"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageButton
                            android:id="@+id/imgBtnSoccer"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/round_btn_border"
                            android:padding="7dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_soccer_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1"
                            app:layout_constraintEnd_toStartOf="@+id/imgBtnDonut"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.2" />

                        <ImageButton
                            android:id="@+id/imgBtnDonut"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/round_btn_border"
                            android:padding="7dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_donut_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.2" />

                        <ImageButton
                            android:id="@+id/imgBtnBasketball"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/round_btn_border"
                            android:padding="7dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_basketball_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imgBtnDonut"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTheme"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="@string/settings_content_theme"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="?android:attr/textColorPrimary" />

                        <Spinner
                            android:id="@+id/spinnerTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:backgroundTint="?attr/colorSecondary"
                            android:entries="@array/theme"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Text demo"
                android:inputType="number"
                android:minHeight="64dp"
                android:padding="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch demo"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="?android:attr/textColorPrimary" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>